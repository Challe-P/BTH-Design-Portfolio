{% include 'incl/header.twig' %}

<body>
    {% include 'incl/nav.twig' %}

    <div class="main" role="main">
        <div class="technology">
            <div class="tech-nav">
            <div role="navigation" tabindex="-1">
                <h2>Technologies</h2>
                <ul>
                    {% for page in pages if page.title and not page.hidden and '/technology/' in page.url %}
                        <li>
                            <a {% if page.id==current_page.id %}  class="active-tech" {% endif %} href="{{ page.url }}">{{ page.title }}</a> 
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="tech-content">
            {{ content }}
        </div>
    </div>
</div>
    {% include 'incl/footer.twig' %}
</body>

</html>
